---
import defaultDescription from '../../../../src/app/config/description.ts';

interface Props {
	title?: string;
  description?: string;
}

const {
  title = 'UniProt',
  description = defaultDescription,
} = Astro.props;
---
<head>
  <meta charset="utf-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width" />
  <meta name="theme-color" content="#00639a" />

  <!-- OpenSearch -->
  <link rel="search" type="application/opensearchdescription+xml" href="/opensearch.xml" title="UniProt">
  <!-- icons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link
    rel="shortcut icon"
    type="image/png"
    sizes="144x144"
    href="/mstile-144x144.png"
  />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <title>{title}</title>

  <!-- remove when finished -->
  <meta name="robots" content="noindex" />
</head>